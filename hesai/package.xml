<?xml version="1.0"?>
<package format="3">
  <name>hesai_lidar_driver</name>
  <version>1.0.0</version>
  <description>Hesai Pandar 40p LiDAR driver for cone detection on autonomous vehicles</description>

  <maintainer email="seth@example.com">Seth</maintainer>
  <license>MIT</license>

  <buildtool_depend>ament_cmake</buildtool_depend>

  <depend>rclcpp</depend>
  <depend>std_msgs</depend>
  <depend>sensor_msgs</depend>
  <depend>geometry_msgs</depend>
  <depend>tf2</depend>
  <depend>tf2_ros</depend>
  <depend>tf2_geometry_msgs</depend>

  <build_depend>libpcl-dev</build_depend>
  <build_depend>libboost-dev</build_depend>
  <build_depend>libboost-system-dev</build_depend>
  <build_depend>libboost-thread-dev</build_depend>

  <exec_depend>libpcl-dev</exec_depend>
  <exec_depend>libboost-dev</exec_depend>
  <exec_depend>libboost-system-dev</exec_depend>
  <exec_depend>libboost-thread-dev</exec_depend>

  <test_depend>ament_lint_auto</test_depend>
  <test_depend>ament_lint_common</test_depend>

  <export>
    <build_type>ament_cmake</build_type>
  </export>
</package>
